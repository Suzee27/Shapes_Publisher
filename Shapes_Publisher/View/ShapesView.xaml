<Window x:Class="Shapes_Publisher.View.ShapesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shapes_Publisher.View" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <TextBlock Text="MSMQ PUBLISHER"  FontSize="30" Margin="220,12" FontWeight="Bold" DockPanel.Dock="Top"/>
        <ListBox x:Name="lstBox" Margin="10">
            <Rectangle x:Name="rect" Margin="10" Height="50" Width="50" Stroke="Black"/>
            <Ellipse Margin="10" Height="50" Stroke="Black" Width="50" />
            <Line Margin="10" X2="50" Y2="80" Stroke="Black"/>
            <Rectangle Margin="10" Height="50" Width="120" Stroke="Black"/>
        </ListBox>
        <Border BorderBrush="DarkBlue" BorderThickness="2">
            <Canvas x:Name="canvas" MouseLeftButtonDown="canvas_MouseLeftButtonDown" Background="Transparent"></Canvas>
        </Border>

    </DockPanel>

</Window>
